# 🔧 Configuration Environnement - Open Community Manager
# Copiez ce fichier vers .env et adaptez les valeurs

# 🏷️ Application
APP_NAME="Open Community Manager"
APP_VERSION="1.0.0"
APP_ENV="production"

# 🔐 Sécurité
SECRET_KEY="your-super-secret-key-change-this-in-production"
JWT_SECRET_KEY="your-jwt-secret-key-change-this-too"
ENCRYPTION_KEY="your-encryption-key-for-sensitive-data"

# 🗄️ Base de données
DB_HOST="localhost"
DB_PORT="5432"
DB_NAME="opencommunitymanager"
DB_USER="ocm_user"
DB_PASSWORD="secure_database_password"
DATABASE_URL="postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}"

# 🌐 URLs et CORS
FRONTEND_URL="https://yourdomain.com"
BACKEND_URL="https://api.yourdomain.com"
CORS_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# 📧 Email (pour notifications)
SMTP_SERVER="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
FROM_EMAIL="noreply@yourdomain.com"

# ☁️ Stockage Cloud (optionnel)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_BUCKET_NAME="your-s3-bucket"
AWS_REGION="eu-west-3"

# 📊 Analytics et Monitoring
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project"

# 🔔 Notifications
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"
DISCORD_WEBHOOK_URL="https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK"

# 🚀 Déploiement
DEPLOY_HOOK_URL="https://api.render.com/deploy/srv-XXXXXXXXXXXX"
HEALTH_CHECK_URL="https://yourdomain.com/health"

# 🐳 Docker
DOCKER_REGISTRY="ghcr.io"
DOCKER_NAMESPACE="opentech221/opencommunitymanager2"

# 📈 Grafana
GRAFANA_PASSWORD="secure_grafana_password"

# 🧪 Tests
TEST_DATABASE_URL="postgresql://test_user:test_password@localhost:5432/test_db"
